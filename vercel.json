{
  "version": 2,
  "name": "todo-list",
  "builds": [
    {
      "src": "apps/todo",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "apps/api/src/server",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "memory": 1024,
        "buildCommand": "npm run build",
        "developmentCommand": "npm run dev"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/apps/api/src/server/$1" },
    { "src": "/(.*)", "dest": "/apps/todo/$1" }
  ]
}
