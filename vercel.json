{
  "version": 2,
  "name": "todo-list",
  "builds": [
    {
      "src": "apps/todo",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "apps/api/dist/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/apps/api/dist/server.js" },
    { "src": "/(.*)", "dest": "/apps/todo/$1" }
  ]
}
